---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { PUBLIC_CHAT_DOMAIN } from "astro:env/client";

const { active } = Astro.props;
---

<Header active={active} />

<main class="mt-4 px-2 mx-auto max-w-screen-xl">
  <slot />
</main>

<iframe
  id="chat-widget"
  allowtransparency="true"
  src={`${PUBLIC_CHAT_DOMAIN}/app/embed/chat/w3981q79i86f9p4`}
  class="fixed bottom-5 right-5 w-80 h-96 border-none rounded-lg z-10"></iframe>

<Footer />
