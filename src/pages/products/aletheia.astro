---
import Root from "../../layouts/Root.astro";
import General from "../../layouts/General.astro";
import Thalia from "../../assets/Thalia.jpg";
import Image from "astro/components/Image.astro";
---

<Root title="Growplex | AletheiaAI">
  <General active="aletheia">
    <div class="max-w-6xl mx-auto px-4 pb-12 space-y-24">
      <!-- Hero (image on the left for a fresh look) -->
      <section class="hero bg-base-200 min-h-screen">
        <div
          class="hero-content flex-col-reverse lg:flex-row-reverse items-center text-center lg:text-left"
        >
          <div class="lg:w-1/2 space-y-6">
            <span class="badge badge-info">Beta Launch</span>
            <h1 class="text-5xl font-bold">AletheiaAI</h1>
            <p class="py-4 text-lg">
              Keep your finger on the pulse of your market—protect your
              reputation, discover leads, and get AI-powered insights across
              webs, messengers, and news.
            </p>
            <button
              onclick="CTAMainModal.showModal()"
              class="btn btn-primary btn-lg"
            >
              Start Beta
            </button>
          </div>
          <div class="lg:w-1/2">
            <Image
              src={Thalia}
              alt="AletheiaAI Illustration"
              class="rounded-lg shadow-2xl mx-auto w-3/4 sm:w-2/3 md:w-1/2 lg:w-full max-w-full h-auto"
            />
          </div>
        </div>
      </section>

      <!-- Features -->
      <section class="space-y-8">
        <h2 class="text-3xl font-bold text-center">Key Features</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Customizable Feeds -->
          <div
            class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow"
          >
            <div class="card-body">
              <h3 class="card-title">Customizable Feeds</h3>
              <p>
                Define keywords, sources, and channels. AletheiaAI continuously
                pulls in relevant data so you never miss a beat.
              </p>
            </div>
          </div>
          <!-- AI Analytics & Reports -->
          <div
            class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow"
          >
            <div class="card-body">
              <h3 class="card-title">AI Analytics & Reports</h3>
              <p>
                Generate concise, data-driven reports on demand. Export to PDF,
                CSV or integrate via webhook.
              </p>
            </div>
          </div>
          <!-- Reputation Monitoring (Coming Soon) -->
          <div class="card bg-base-100 shadow-xl opacity-50">
            <div class="card-body">
              <h3 class="card-title">Reputation Monitoring</h3>
              <p>
                Get instant alerts on brand mentions, sentiment shifts, and
                emerging risks across forums and social.
              </p>
              <div class="badge badge-outline mt-4">Coming Soon</div>
            </div>
          </div>
          <!-- Lead Discovery (Coming Soon) -->
          <div class="card bg-base-100 shadow-xl opacity-50">
            <div class="card-body">
              <h3 class="card-title">Lead Discovery</h3>
              <p>
                Identify and engage potential customers detected in
                conversations, news, and public channels.
              </p>
              <div class="badge badge-outline mt-4">Coming Soon</div>
            </div>
          </div>
        </div>
      </section>

      <!-- How It Works -->
      <section class="text-center space-y-6">
        <h2 class="text-3xl font-bold">How It Works</h2>
        <div
          class="flex flex-col md:flex-row items-center justify-center gap-12"
        >
          <div class="flex flex-col items-center space-y-4">
            <div
              class="rounded-full bg-secondary text-secondary-content p-4 text-2xl font-bold"
            >
              1
            </div>
            <p>
              Sign up and create your custom feed in the Aletheia dashboard.
            </p>
          </div>
          <div class="flex flex-col items-center space-y-4">
            <div
              class="rounded-full bg-secondary text-secondary-content p-4 text-2xl font-bold"
            >
              2
            </div>
            <p>
              Set your monitoring goals—keywords, sources, alert thresholds.
            </p>
          </div>
          <div class="flex flex-col items-center space-y-4">
            <div
              class="rounded-full bg-secondary text-secondary-content p-4 text-2xl font-bold"
            >
              3
            </div>
            <p>
              Receive AI-generated insights and real-time alerts. Export or
              integrate as needed.
            </p>
          </div>
        </div>
      </section>

      <!-- Get Started -->
      <section class="space-y-8">
        <h2 class="text-3xl font-bold text-center">
          Ready to Monitor Your Market?
        </h2>
        <form class="max-w-lg mx-auto space-y-4">
          <textarea
            class="hidden textarea textarea-bordered w-full"
            placeholder="Let us know your monitoring objectives..."></textarea>
          <a
            class="btn btn-primary w-full"
            href="https://t.me/growplex"
            target="_blank"
          >
            Contact Us on Telegram
          </a>
        </form>
      </section>
    </div>
  </General>
</Root>
