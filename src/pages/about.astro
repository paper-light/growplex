---
import VOVA from "../assets/images/team/VOVA.jpg";
import NIKITA from "../assets/images/team/NIKITA.jpg";
import RENATA from "../assets/images/team/RENATA.jpg";
import DIMA from "../assets/images/team/DIMA.jpg";

import Root from "../layouts/Root.astro";
import General from "../layouts/General.astro";
import { Image } from "astro:assets";

const team = [
  {
    name: "Vladimir Beliaev",
    role: "Founder & Tech Lead",
    image: VOVA,
    email: "4dgowork@gmail.com",
  },
  {
    name: "Nikita Ablamsky",
    role: "DevOps & Web Developer",
    image: NIKITA,
    email: "4dgowork@gmail.com",
  },
  {
    name: "Dmitry Sacharov",
    role: "AI engineer & Data Scientist",
    image: DIMA,
    email: "4dgowork@gmail.com",
  },
  {
    name: "Renata Shcherbakova",
    role: "UI/UX designer",
    image: RENATA,
    email: "4dgowork@gmail.com",
  },
];
---

<Root>
  <General active="about">
    <div class="max-w-4xl mx-auto px-4 py-8 space-y-12">
      <section class="block md:flex border border-base-300 rounded px-6 py-3">
        <div class="flex-2">
          <h1 class="text-2xl font-bold mb-4">About Growplex</h1>
          <p class="text-gray-600">
            We help founders, freelancers, and small teams turn ideas into
            AI-powered web products fast.
          </p>
        </div>

        <div class="divider divider-horizontal"></div>

        <div class="flex-3">
          <h2 class="text-2xl font-semibold mb-4">Our Mission</h2>
          <p class="text-base text-gray-600 max-w-2xl mx-auto">
            Growplex is on a mission to empower makers with tools and templates
            that launch in days, not months. We believe in speed, simplicity,
            and AI-native design.
          </p>
        </div>
      </section>

      <!-- Team -->
      <section>
        <h2 class="text-2xl font-semibold text-center mb-8">Meet the Team</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {
            team.map((member) => (
              <div class="card bg-base-100 shadow-md">
                <Image
                  src={member.image}
                  alt={member.name}
                  class="rounded-2xl aspect-square object-cover size-64 mx-auto"
                />
                <div class="card-body items-center text-center">
                  <h3 class="card-title">{member.name}</h3>
                  <p class="text-sm ">{member.role}</p>
                  <p class="text-sm">{member.email}</p>
                </div>
              </div>
            ))
          }
        </div>
      </section>
    </div>

    <!-- What We Do -->
    <section>
      <h2 class="text-2xl font-semibold text-center mb-4">What We Build</h2>
      <div class="flex flex-col md:flex-row gap-6 justify-center">
        <a href="/products/agency" class="btn btn-outline btn-primary p-3"
          >MVP Agency</a
        >
        <a href="/app" class="btn btn-outline btn-secondary p-3">AI Web App</a>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="text-center pt-12 pb-12">
      <h2 class="text-xl font-semibold mb-2">Letâ€™s Build Something Together</h2>
      <p class="text-sm text-gray-500 mb-4">
        Have an idea? We can help you test and launch it fast.
      </p>
      <a href="/products/agency" class="btn btn-primary">Get Started</a>
    </section>
  </General>
</Root>
