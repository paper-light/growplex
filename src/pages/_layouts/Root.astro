---
import "@/shared/styles/global.css";
import { ClientRouter } from "astro:transitions";

import Growplex from "@/shared/assets/icons/Growplex.svg";
import Posthog from "@/pages/_global/Posthog.astro";
import ThemeLoad from "@/pages/_global/ThemeLoad.astro";
import CookiesAccept from "@/pages/_global/CookiesAccept.svelte";
import PortalHost from "@/pages/_global/PortalHost.svelte";

const {
  title,
  favicon = Growplex.src,
  needCookies = true,
  loadTheme = true,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href={favicon} />

    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <meta name="color-scheme" content="light dark" />
    <meta name="theme-color" content="#059669" />

    <ClientRouter />
    <Posthog />

    {loadTheme && <ThemeLoad />}

    <slot name="head" />
  </head>
  <body class="font-sans antialiased leading-relaxed">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 focus:z-50 focus:px-4 focus:py-2 focus:rounded-md focus:bg-base-200 focus:text-base-content"
    >
      Skip to content
    </a>

    <PortalHost client:only />

    <div transition:persist="chat-widget-root" id="chat-widget-root"></div>

    <slot />

    {needCookies && <CookiesAccept client:only />}
  </body>
</html>
