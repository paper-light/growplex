---
import Content from "@/pages/_layouts/content/Content.astro";
import HestiaSrc from "@/shared/assets/Hestia.jpg";
import Image from "astro/components/Image.astro";
---

<Content title="Hestia">
  <div class="max-w-6xl mx-auto px-4 pb-12 space-y-24">
    <!-- Hero -->
    <section class="hero bg-base-200 min-h-screen">
      <div class="hero-content flex-col lg:flex-row items-center text-center">
        <div class="lg:w-1/2 space-y-6">
          <span class="badge badge-neutral">Coming Soon</span>
          <h1 class="text-5xl font-bold">Hestia</h1>
          <p class="py-4 text-lg">
            Retention & Loyalty Engine. Track client health, automate
            re-engagement, and boost LTV with AI-driven loyalty campaigns and
            feedback loops.
          </p>
          <button
            onclick="CTAMainModal.showModal()"
            class="btn btn-primary btn-lg"
            disabled
          >
            Get Early Access
          </button>
        </div>
        <div class="lg:w-1/2">
          <Image
            src={HestiaSrc}
            alt="Hestia Illustration"
            class="rounded-lg shadow-2xl mx-auto w-3/4 sm:w-2/3 md:w-1/2 lg:w-full max-w-full h-auto"
          />
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="space-y-8">
      <h2 class="text-3xl font-bold text-center">Features</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <div
          class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow"
        >
          <div class="card-body">
            <h3 class="card-title">Client Health Scoring</h3>
            <p>
              Track engagement, purchases, and feedback to score client loyalty
              (0â€“100).
            </p>
          </div>
        </div>
        <div
          class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow"
        >
          <div class="card-body">
            <h3 class="card-title">Trigger Campaigns</h3>
            <p>
              Automatically launch personalized offers and re-engagement when
              health drops.
            </p>
          </div>
        </div>
        <div
          class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow"
        >
          <div class="card-body">
            <h3 class="card-title">ML-Powered Retention</h3>
            <p>
              Predict repeat purchases and optimal timing for cross- & upsell
              with machine learning.
            </p>
          </div>
        </div>
        <div
          class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow"
        >
          <div class="card-body">
            <h3 class="card-title">Feedback Loops</h3>
            <p>
              Automate NPS surveys and collect feedback after key events to
              improve retention.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="text-center space-y-6">
      <h2 class="text-3xl font-bold">How It Works</h2>
      <div class="flex flex-col md:flex-row items-center justify-center gap-12">
        <div class="flex flex-col items-center space-y-4">
          <div
            class="rounded-full bg-neutral text-neutral-content p-4 text-2xl font-bold"
          >
            1
          </div>
          <p>Monitor client health and engagement in real time.</p>
        </div>
        <div class="flex flex-col items-center space-y-4">
          <div
            class="rounded-full bg-neutral text-neutral-content p-4 text-2xl font-bold"
          >
            2
          </div>
          <p>Trigger loyalty campaigns and offers automatically.</p>
        </div>
        <div class="flex flex-col items-center space-y-4">
          <div
            class="rounded-full bg-neutral text-neutral-content p-4 text-2xl font-bold"
          >
            3
          </div>
          <p>Collect feedback and optimize retention with AI insights.</p>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="space-y-8">
      <h2 class="text-3xl font-bold text-center">
        Get Notified When Hestia Launches
      </h2>
      <form class="max-w-lg mx-auto space-y-4">
        <textarea
          class="hidden textarea textarea-bordered w-full"
          placeholder="Let us know your retention needs..."></textarea>
        <button class="btn btn-neutral w-full" disabled>Coming Soon</button>
      </form>
    </section>
  </div>
</Content>
