---
import Root from "./Root.astro";
import Header from "./ContentHeader.astro";
import Footer from "./ContentFooter.astro";
import ChatLoad from "../global/ChatLoad.astro";

const { title, favicon = "/LOGO.png" } = Astro.props;
---

<Root title={title} favicon={favicon}>
  <Header active={title} />

  <main class="mt-4 px-2 mx-auto max-w-screen-xl">
    <slot />
  </main>

  <Footer />

  <ChatLoad />
</Root>
